{
  "name": "xshield-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared/*",
    "docs",
    "example",
    "lib"
  ],
  "size-limit": [
    {
      "name": "CommonJS",
      "path": "lib/dist/cjs/index.cjs",
      "limit": "8 KB"
    },
    {
      "name": "ES Modules",
      "path": "lib/dist/esm/index.js",
      "limit": "8 KB"
    }
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config": "*",
    "prettier": "latest",
    "ts-node": "^10.9.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.5.0"
}
