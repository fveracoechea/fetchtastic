{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "cache": false
    },
    "test": {
      "inputs": [
        "*.test.ts"
      ],
      "outputs": [
        "coverage/**",
        "report.json"
      ]
    },
    "dev": {
      "cache": false
    },
    "type-check": {
      "cache": false
    }
  }
}
